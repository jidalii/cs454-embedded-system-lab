<robot name="servo">
  <link name="root">
    <inertial>
      <mass value="0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <link name="arm">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -.1"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.01" length="0.2"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -.1"/>
    </collision>
    <inertial>
      <mass value=".1"/>
      <origin rpy="0 0 0" xyz="0 0 -.1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

<link name="head">
    <visual>
      <geometry>
        <box size=".02 .2 .02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size=".02 .2 .02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value=".1"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <joint name="head_root_joint" type="continuous">
    <parent link="root"/>
    <child link="head"/>
    <axis xyz="1 0 0"/>
    <limit lower="-.5" upper=".5"/>
    <dynamics friction="0" damping="0"/>
  </joint>

  <joint name="head_arm_joint" type="spherical">
    <parent link="head"/>
    <child link="arm"/>
    <origin xyz="0 .1 0"/>
  </joint> 
</robot>
